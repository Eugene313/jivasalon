@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,500,700')
*
    margin: 0
    padding: 0
    box-sizing:border-box
body
    background:white
    min-width 1200px
p
    margin: 0
a 
    text-decoration: none
    color:white
    &:hover
        text-decoration: none
    &:hover
        color:green
.wrap
    width:100%
    #header
        position:relative
        display:flex
        flex-direction:column
        justify-content:center 
        align-items:center
        overflow hidden
        transition:0.3s
        height: 100vh
        img
            position absolute
            top: -200px
            width: 100%
        nav
            position:fixed
            top:0
            width:100%
            height 80px
            transition:0.5s
            z-index 3
            .blur
                position: absolute
                width:100%
                height:100%
                background:#00000020
                filter: blur(3px)
                transition:1s
            .nav-wrap
                position relative
                height:100%
                display:flex
                justify-content:space-between
                align-items:center
                transition:1s
                z-index:2
                margin: 0 auto
                .nav-menu
                    display:flex
                    justify-content:center
                    align-items:center
                    transition:1s
                    .nav-link
                        margin-left:15px
                        text-transform:uppercase
                        font-family: 'Roboto', sans-serif;
                        font-size:18px
                        font-weight:300
                        transition:1s
                        &:first-child
                            border:1px solid white
                            padding: 5px 10px
                            font-size: 30px
                            &:hover
                                background:#ffffff70;
                                cursor pointer
                                color:white
                            a:hover
                                color: white;
                .contact
                    display:flex
                    justify-content:center
                    align-items:center
                    font-weight:300
                    p
                        color:white
                        text-transform:uppercase
                        font-size:20px
                        font-family: 'Roboto', sans-serif;
                        margin-left:15px
        .wrap-title
            background: #00000050
            padding: 70px 50px
            display: flex
            flex-direction: column
            justify-content: center
            align-items: center
            h1 
                position relative
                font-size:62px
                font-family: 'Roboto', sans-serif;
                font-weight:500
                color:white
                margin-bottom:40px
                opacity:0
                transition:0.5s
                z-index 2
            h4 
                position relative
                font-size:24px
                font-family: 'Roboto', sans-serif;
                font-weight:300
                color:white
                opacity:0
                transition:2s
                z-index 2
    #question
        width:100%
        height:800px
        background:#fff
        text-align: center
        h2
            padding-top:100px
            padding-bottom: 50px
            font-family: 'Roboto',sans-serif
            font-weight: 300
            font-size: 2rem
            overflow: hidden;
        .question
            display: flex;
            justify-content: space-between
            .question-img
                img
                    width: 700px
                    box-shadow: 0 0 15px 6px rgba(0,0,0,0.4)
            .question-title
                width: 350px
                text-align: left
                padding-left: 50px
                h4
                    font-family: 'Roboto',sans-serif
                    font-size: 1.5rem
                    font-weight: 400
                    padding-bottom: 30px
                    position relative
                    left:-22px
                    &:before
                        content: '\27A6'
                        position:relative
                        left:-10px
                        color:grey
                p
                    font-family: 'Times New Roman'
                    font-size: 1.3rem
                    font-weight: 300
                    padding-bottom: 30px 
                    color: #736f6f
                    line-height: 1.8rem
    #dreem
        width: 100%
        height: 700px
        display: flex
        flex-direction: column
        align-items: center
        justify-content: center
        h2
            width: 80%
            color: white;
            font-size: 4rem
            text-align: center
            font-family: 'Roboto',sans-serif
            font-weight: 300
            text-shadow: #e0e0e0 1px 1px 0, 0px 4px 14px rgba(0,0,0,0.73)
        p
            color: white
            font-size: 1.5rem
            text-align: center
            font-family: 'Roboto',sans-serif
            font-weight: 300
            padding-top: 30px
            text-shadow: #e0e0e0 1px 1px 0, 0px 4px 14px rgba(0,0,0,0.73)
    #types
        width: 100%
        height  300px
        text-align center
        h2
            padding-top 70px
        p
            padding 30px 0
    #secret
        width: 100%
        .secret-wrap
            width :100%
            height : 600px
            display :flex
            flex-direction :column
            justify-content center
            align-items center
            text-align center
            h2
                font-size :4rem
                color:white
                padding-bottom 30px
                text-shadow: #e0e0e0 1px 1px 0, 0px 4px 14px rgba(0,0,0,0.73)
            p
                color: #fff
                font-size 1.8rem
                text-shadow: #e0e0e0 1px 1px 0, 0px 4px 14px rgba(0,0,0,0.73)
    #specialists
        width 100%
        text-align center
        .wrap-specialists
            h2
                font-size 2rem
                padding-top 70px
            p
                padding 30px 0
                color grey
                font-size 1.5rem
            .specialists-container
                width 100%
                .specialists-block
                    margin 0 auto
                    .specialists-img
                        margin 0 auto
                        width 200px
                        height 200px
                        border-radius 50%
                        overflow hidden
                        box-shadow: 5px 11px 28px -2px rgba(0,0,0,0.75)
                        img
                            width 200px
                p
                    color: #535353
                    font-size 1.7rem
    #price
        width 100%
        height 1000px
        background linear-gradient(45deg, rgba(234, 21, 129, 0.6), rgba(10, 23, 187, 0.6) 100%)
        .price-wrap
            width 100%
            text-align center
            padding 75px 0
            h2
                font-size 2rem
                text-align center
                color #fff
                text-transform uppercase
                padding-bottom 50px
            .price-container
                width 100%
                .women
                    background #fff
                    padding 50px 80px
                    border-radius 5px
                    box-shadow: 0 0 77px -23px rgba(0,0,0,0.75)
                    p
                        font-size 1.3rem
                        color: grey
                    h3
                        font-size 3rem
                        font-weight 300
                        color red
                    .bolder
                        color: #000
                        font-weight 500
                .man
                    height 100%
                    background #ffffff
                    padding 50px 80px
                    border-radius 5px
                    box-shadow: 0 0 77px -23px rgba(0,0,0,0.75)
                    p
                        font-size 1.3rem
                        color: grey
                    h3
                        font-size 3rem
                        font-weight 300
                        color red
                    .bolder
                        color: #000
                        font-weight 500
            h3
                font-size 1.5rem
                color #fff
                font-weight 300
                padding 30px 0  10px 0
    #contact
        width :100%
        height 100%
        text-align center
        .contact-wrap
            h2
                padding :70px 0 0 0
                font-size : 2rem
                font-family :'Roboto',sans-serif
                text-transform :uppercase
            p
                padding 20px
                font-size 1.5rem
                color:grey
            .phone
                font-size :2.5rem
                color :black
                text-transform: uppercase
                font-weight :300
        .map-wrap
            width :100%
            padding 40px 10px 70px 10px
            .map-block
                padding 70px 10px 20px 10px
                width: 100%
                height 500px
                box-shadow: 0 0 19px -2px rgba(0,0,0,0.75)
                position relative
                border-radius 5px
                .map-block-head
                    display flex
                    justify-content center
                    align-items center
                    width 90%
                    height 80px
                    background #292929
                    position absolute
                    top -30px
                    left 30px
                    border-radius 5px
                    box-shadow 0 10px 19px -2px rgba(0,0,0,0.75)
                    p
                        color white
                        font-size 1.7rem
                        font-weight 300
    footer
        width : 100%
        height :100%
        text-align center
        color:white
        hr
            background:#ffffff80
            width 33%
        .footer-menu
            width :100%
            background : #292929;
            .wrap-menu
                display:flex
                justify-content:center
                .footer-menu-link
                    padding : 50px 30px 20px 30px
                    font-size: 24px
                    font-family:'Roboto',sans-serif
            .footer-title
                padding 15px
                .social
                    a
                        i
                            font-size 22px
                            padding 40px 10px
        .footer-copyright
            width :100%
            height :100%
            padding 20px 0
            background:#1e1e1e